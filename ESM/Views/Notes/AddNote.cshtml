@model ESM.Models.Note


    @using (Html.BeginForm("AddNote", "Notes", FormMethod.Post)) 
    {
        @Html.AntiForgeryToken()
        
<div class="form-horizontal">
    <h4>Dodaj notatkę</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.EmployeeId)
    @Html.HiddenFor(model => model.NoteId)
    @Html.HiddenFor(model => model.CreatedAt)
    @Html.HiddenFor(model => model.IsInArchive)
    <div class="form-group">
        @Html.LabelFor(model => model.Content, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Content, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Dodaj notatkę" class="btn btn-primary" />
        </div>
    </div>
</div>
    }
    
    <div>
        @Html.ActionLink("Powrót", "Details", "Employees", new { id = Model.EmployeeId }, null)
    </div>

