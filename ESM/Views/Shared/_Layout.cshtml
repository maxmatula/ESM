<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title — Employees System Managament</title>
    <link href="https://fonts.googleapis.com/css?family=Ubuntu:300,400,700,900&amp;subset=latin-ext" rel="stylesheet">
    @Styles.Render("~/Content/font-awesome/fa-solid.min.css")
    @Styles.Render("~/Content/font-awesome/fontawesome.min.css")
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/css/croppie.css")
    @Scripts.Render("~/bundles/modernizr")
    <script>
        document.body.classList += " js";
    </script>
</head>
<body>
    <!-- Preloader -->
    <div class="preloader">
        <div class="content">
            <div class="loader-circle"></div>
            <div class="loader-line-mask">
                <div class="loader-line"></div>
            </div>
            <svg width="36" viewBox="0 0 36 20" id="prism-logo">
                <path id="prism-logo-p2" d="M2.000,0.000 C2.000,0.000 21.000,20.000 21.000,20.000 C21.000,20.000 34.000,20.000 34.000,20.000 C34.000,20.000 14.000,0.000 14.000,0.000 C14.000,0.000 2.000,0.000 2.000,0.000 Z" fill="rgba(255,255,255,.7)" />
                <path id="prism-logo-p1" d="M11.957,2.070 C11.957,0.913 12.680,0.001 14.056,0.001 C14.135,0.001 2.840,0.001 2.099,0.001 C1.359,0.001 0.000,0.814 0.000,2.070 C0.000,3.327 0.000,20.001 0.000,20.001 C0.000,20.001 11.957,20.001 11.957,20.001 C11.957,20.001 11.957,11.414 11.957,2.070 Z" fill="#fff" />
                <path id="prism-logo-p3" d="M24.007,17.933 C24.007,19.090 23.286,20.001 21.913,20.001 C21.835,20.001 33.167,20.001 33.906,20.001 C34.645,20.001 36.000,19.189 36.000,17.933 C36.000,16.676 36.000,0.001 36.000,0.001 C36.000,0.001 24.007,0.001 24.007,0.001 C24.007,0.001 24.007,8.588 24.007,17.933 Z" fill="#fff" />
            </svg>
        </div>
    </div>
    <div class="container-fluid">
        <div class="row">
            <header class="main-header col-lg-2">
                <div class="main-header__brand">
                    <a href="@Url.Action("Index","UserPanel")">
                        <img src="~/Images/esm logo.png" alt="ESM" class="img-responsive" />
                    </a>
                </div>
                <div class="main-header__user row">
                    <div class="col-xs-3">
                        <img src="~/Images/avatar-placeholder.png" alt="User Avatar" class="img-circle pull-left img-responsive user__image" />
                    </div>
                    <div class="col-xs-9">
                        <span class="user__label">
                            Zalogowano jako:
                        </span>
                        <span class="user__name"><small>@Session["Name"]</small> @Session["Surname"]</span>
                    </div>


                </div>

                <nav class="main-header__links">
                    <ul>
                        <li><a href="@Url.Action("Index","UserPanel")"><i class="fas fa-suitcase"></i> Firma</a></li>
                        <li><a href="#"><i class="fas fa-calendar"></i> Wydarzenia</a></li>
                        <li><a href="@Url.Action("Index","Calculator")"><i class="fas fa-calculator"></i> Kalkulator wynagrodzeń</a></li>
                        <li><a href="#"><i class="fas fa-cog"></i> Ustawienia</a></li>
                        <li><a href="javascript:document.getElementById('logoutForm').submit()"><i class="fas fa-power-off "></i> Wyloguj</a></li>
                    </ul>
                    @using (Html.BeginForm("Logout", "Account", FormMethod.Post, new { id = "logoutForm" }))
                    {@Html.AntiForgeryToken()}
                </nav>
                <div class="main-header__footer text-center">
                    <img src="~/Images/esm logo.png" alt="ESM" class="img-fluid" />
                    <p>MM&GW Solutions &copy; @DateTime.Now.Year</p>
                </div>
            </header>
            <main class="col-lg-10 col-lg-offset-2 main-content">
                @RenderBody()
            </main>
        </div>
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/Scripts/jquery.unobtrusive-ajax.js")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Scripts/scripts.js")

    @RenderSection("scripts", required: false)
</body>
</html>
